{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "stripInternal": true,
    "lib": [
      "es2022",
      "webworker"
    ],
    "types": [
      "vscode"
    ],
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "dist"
  },
  "exclude": [
    "./dist"
  ]
}
