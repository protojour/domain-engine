pub type artist {
    rel .'ID'|id: { fmt '' => 'artist/' => uuid => . }
    rel .'name': string
}

pub type record
rel record 'name': string

pub type instrument-id {
    fmt '' => 'instrument/' => uuid => .
}

pub type instrument
rel instrument 'ID'|id: instrument-id
rel instrument 'name': string

pub type plays
rel plays 'how_much': string

rel [artist] 'plays'(rel .is: plays)::'played_by' [instrument]
