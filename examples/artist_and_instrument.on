domain 01GXBEBKPGNNP387Y912V5FY7V ()

def artist (
    rel. 'ID'[rel* gen: auto]: ( fmt '' => 'artist/' => uuid => . )
    rel* 'name': text
)

def record (
    rel* 'name': text
)

def instrument-id (
    fmt '' => 'instrument/' => uuid => .
)

def instrument (
    rel. 'ID'[rel* gen: auto]: instrument-id
    rel* 'name': text
)

def play_params (
    rel* 'how_much': text
)

edge play {
    (a) plays: (i) with: play_params,
    (i) played_by: (a) with: play_params,
}

rel {artist} plays: {instrument}
rel {instrument} played_by: {artist}

map artists (
    (),
    artist {..@match artist()}
)

map artists_by_name (
    ( 'name': x ),
    artist {
        ..@match artist( 'name': x )
    }
)

