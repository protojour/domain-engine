def cubic_meters {
    rel _ is: i64
}

def meters {
    rel _ is: i64
}

def meters_per_second {
    rel _ is: i64
}

def seconds {
    rel _ is: i64
}

def water_tank {
    rel _ 'height': meters
    rel _ 'radius': meters
    rel _ 'contents': cubic_meters
}

def velocity_of_emptying {
    rel _ 'velocity': meters_per_second
    rel _ 'duration': seconds
    rel _ 'capacity': cubic_meters
}

map {
    water_tank {
        'height': h
        'contents': con
        'radius': r
    }
    velocity_of_emptying {
        'velocity': r * r
        'duration': con / (r * r)
        'capacity': r * r * h * PI
    }
}
